{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build --workspace=apps/server"
  },
  "deploy": {
    "startCommand": "npm run start --workspace=apps/server",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60
  }
}
