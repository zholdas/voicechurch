# Deepgram API for Speech-to-Text
# Get your key at: https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# DeepL API for Translation
# Get your key at: https://www.deepl.com/pro-api
DEEPL_API_KEY=your_deepl_api_key_here

# Server configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Session configuration
SESSION_SECRET=your_session_secret_here
# COOKIE_DOMAIN=.yourdomain.com  # For production with subdomains

# Google OAuth (optional - for user authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Database
DATABASE_PATH=./data/voicechurch.db

# QRMapper API (optional - for QR code generation)
# Get your key at: https://qrmapper.com
QRMAPPER_API_KEY=your_qrmapper_api_key_here
QRMAPPER_WEBHOOK_URL=https://your-api-domain.com/webhooks/qr

# Google Cloud TTS (optional - for high-quality voice synthesis)
# Setup: https://console.cloud.google.com/apis/library/texttospeech.googleapis.com
# 1. Create a project in Google Cloud Console
# 2. Enable "Cloud Text-to-Speech API"
# 3. Create a Service Account with role "Cloud Text-to-Speech User"
# 4. Download JSON key and paste its content below
# Free tier: 4M characters/month (Standard), 1M characters/month (WaveNet/Neural2)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# Voice configuration (optional)
# English voices: en-US-Neural2-C (female), en-US-Neural2-D (male), en-US-Wavenet-F
# Spanish voices: es-ES-Neural2-A (female), es-ES-Neural2-B (male)
GOOGLE_TTS_VOICE_EN=en-US-Neural2-C
GOOGLE_TTS_VOICE_ES=es-ES-Neural2-A
